# === Core ===
PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# === Auth & Roles ===
# Admin can manage everything (UI + API). Users are comma-separated keys with role=user.
ADMIN_API_KEY=changeme-admin-key
USER_API_KEYS=user-key-1,user-key-2

# Optional: restrict UI access to specific origins (comma separated). Empty = allow all.
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000

# === Webhook ===
# Default webhook used if a session doesn't override.
WEBHOOK_DEFAULT_URL=
WEBHOOK_DEFAULT_SECRET=supersecret

# === Storage ===
# If MYSQL_* provided, MySQL will be used for some persistent settings; else filesystem is used.
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_DATABASE=whatsapp_api

# === Rate limiting ===
# default values, can be overridden dynamically via Admin API
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# === Proxy (optional for WhatsApp web requests) ===
HTTPS_PROXY=

# === Logging ===
LOG_PRETTY=true
LOG_LEVEL=info

# === Anti-spam / Quota ===
SPAM_COOLDOWN_MS=3000
QUOTA_WINDOW_MS=60000
QUOTA_MAX=500

# === Auto reply (for testing) ===
AUTOREPLY_ENABLED=true
AUTOREPLY_PING_PONG=true
